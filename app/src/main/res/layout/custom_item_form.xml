<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/form_item_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="2dp"
        android:paddingStart="5dp"
        android:text="性别"
        android:textColor="@color/form_font_corlor1"
        android:textSize="10sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/form_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_gray"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <EditText
            android:id="@+id/form_item_content_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint=""
            android:imeOptions="actionNext"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/form_font_corlor1"
            android:textColorHint="@color/form_font_corlor1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/form_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingEnd="5dp"
            android:textColor="@color/form_font_corlor1"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/form_item_content_img_below"
            android:layout_width="13dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/arrow_below"
            android:visibility="gone" />

    </FrameLayout>


    <TextView
        android:id="@+id/form_item_tv_error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingStart="5dp"
        android:text="性别"
        android:textColor="@color/form_font_corlor2"
        android:textSize="11sp"
        android:visibility="gone" />


</LinearLayout>