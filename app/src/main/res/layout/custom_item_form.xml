<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/form_item_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:text="性别"
        android:textColor="#797979"
        android:textSize="12sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/form_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_gray">

        <EditText
            android:id="@+id/form_item_content_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:hint="*名称"
            android:textColor="#2e2e2e"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:textColorHint="#797979"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/form_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="#2e2e2e"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/form_item_content_img_below"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/arrow_below"
            android:visibility="gone" />

    </FrameLayout>


    <TextView
        android:id="@+id/form_item_tv_error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:paddingStart="5dp"
        android:text="性别"
        android:textColor="#f10606"
        android:textSize="12sp"
        android:visibility="gone" />


</LinearLayout>